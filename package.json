{
  "name": "zodipus-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Zodipus: solves your schema tragedies - A Prisma generator for clean Zod schemas",
  "keywords": [
    "prisma",
    "generator",
    "zod",
    "validation",
    "schema",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bratsos/zodipus.git"
  },
  "author": "Alex Bratsos",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint --fix",
    "format": "pnpm -r format --fix",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2"
  }
}
